        void comm_OnRxData(object sender, object data, Type type)
        {
            try
            {
                switch (type.FullName)
                {
                    case "System.String":
                        {
                            string strTest = (string)data;
                        }
                        break;   
                    case "System.Byte[]":
                        {
                            byte[] arTest = (byte[])data;
                        }
                        break;
                    case "CH.IO.Comm.tbComm+testData":
                        {
                            tbComm.testData td = (tbComm.testData)data;
                        }
                        break;
                }
